<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_account_sri_config_settings" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.withhold</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="40" />
            <field name="inherit_id" ref="base.res_config_settings_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//div[@id='l10n_ec_section']" position="after">
                    <div
                        id="l10n_ec_withhold"
                        attrs="{'invisible': [('country_code', '!=', 'EC')]}"
                    >
                        <h2>Withhold</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-6 o_setting_box" id="sri_withhold">
                                <div class="o_setting_left_pane">
                                    <div class="row mt16">
                                        <label
                                            string="Journal"
                                            for="l10n_ec_withhold_journal_id"
                                            class="col-lg-3 o_light_label"
                                        />
                                        <field name="l10n_ec_withhold_journal_id" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>